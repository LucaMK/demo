.input{color:#7b7b7b;position:fixed;bottom:0;height:100rpx;width:100%;border-top:1px solid #d8d8d8;background-color:#ededed;font-size:22rpx}.input .input_layout{position:relative}.input .input_layout .input_icon{position:absolute;width:90rpx;height:90rpx}.input .input_layout .input_icon.voice{left:20rpx}.input .input_layout .input_icon.face{right:120rpx}.input .input_layout .input_icon.plus{right:20rpx}.input .input_layout .input_text{border-bottom:1px solid #d8d8d8;margin-left:120rpx;margin-right:240rpx;height:80rpx;font-size:32rpx;color:#000}.input .input_layout .input_text.focus{border-bottom:1px solid #9bb793}.input .input_layout .send{background-color:#14b012;display:inline-block;box-sizing:border-box;position:absolute;border:1px solid #378c37;border-radius:5rpx;right:20rpx;width:90rpx;height:74rpx;line-height:72rpx;color:white;text-align:center;font-size:30rpx;margin-top:8rpx}.input .input_layout .send.hidden{display:none}
